
<view class='verification'>
  <view class='setcode' wx:if="{{isent}}">
    <input  class='fill'  type='number' bindinput="bindinputent" focus="{{true}}" value='{{_code}}' maxlength="12"  placeholder="请输入券码"></input>
  </view>

  <view class='verification-inside'>
    <view class='inputBox'>
      <text>{{tils}}:</text>
      <input type='number' class="accountInp" type='digit' placeholder="{{place}}" maxlength="12" bindinput="bindinput" focus="{{true}}" value='{{_value}}'/>
    </view>

    <view>
      <view class="discountInfo">
        <text class="discountTicket">{{ticketsinfo.skuName}}</text>
         <text class="discountMoney discountMoney" wx:if="{{_type}}">-1</text>
        <text class="discountMoney discountMoney" wx:else>-{{ticketsinfo.couponAmount}}</text>
      </view>
    </view>

    <view class="paymentBox">
      <text>实际需付款（元）</text>
      <text class="actualAmount">{{pay}}</text>
    </view>
    <span catchtap='confirm' class="okBtn {{okhx?'look':''}}">确认核销</span>
  </view>
</view>