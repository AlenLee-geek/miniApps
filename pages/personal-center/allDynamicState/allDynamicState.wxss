.dynamic-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
}

.dynmaic-specific {
  width: 94%;
}

.dynmai-top-qw {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
}

.center-meitz{
  width: 221rpx;
  height: 221rpx;
}

.dynmai-top-left {
  width: 50%;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.dynmai-top-img {
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
  border: 1px solid #e0e0e0;
}

.dynmai-top-right {
  width: 30rpx;
  height: 30rpx;
}

.dynmai-text {
  font-size: 30rpx;
  display: block;
}

.dynmai-text-name {
  font-size: 24rpx;
  color: #555;
}

.dynmai-text-wrap {
  padding-left: 30rpx;
}

.dynmai-top-right-wz {
  width: 40%;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.numberOfpeople {
  font-size: 28rpx;
  color: #808080;
  padding-right: 8rpx;
}

.center-text {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #191919;
  margin: 14rpx 0rpx; 
  height: 100rpx;
  line-height: 48rpx;
}

.center-images{
   width: 221rpx;
  height: 221rpx; 
  padding-right: 10rpx;
}

.center-imgWrap{
  width: 100%;
}

.click-amount{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
}

.click-amount-left{
  width: 80%;
  display: flex;
  align-items: center;
}

.click-amount-right{
  width: 20%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.click-amout-img{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}

.click-amout-text{
  color: #B1B1B1;
  font-size: 24rpx;
  vertical-align: middle;
  padding-left: 14rpx;
}

.amount-icon{
  width: 28rpx;
  height: 28rpx;
  padding-right: 12rpx;
}

.evaluate-text{
  color: #B1B1B1;
  font-size: 24rpx;
}

.center-circulation{
   display: inline-block; 
}