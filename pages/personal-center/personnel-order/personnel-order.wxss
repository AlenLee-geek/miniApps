@import "order-template-item/order-template-item.wxss";
/* tab栏样式 */

.myorder_tab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #e0e0e0;
  text-align: center;
  box-sizing: border-box;
}

.myorder_tab_list {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #808080;
  box-sizing: border-box;
}

.myorder_tab_list.on {
  color: #fc5e2d;
  border-bottom: 5rpx solid #fc5e2d;
}
.no_order{
  background: #fff;
  width: 750rpx;
  margin: 30rpx auto;
  font-size: 30rpx;
  color: #b1b1b1;
  text-align: center;
}