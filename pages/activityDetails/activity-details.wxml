<view>
  <block wx:for="{{posts_key}}" wx:for-item="item" wx:for-index="idx" wx:key="{{index}}">
    <view class='activity-particulars' catchtap='clickVote'>
      <image class='activity-particularsImg' src='{{item.conditions}}'></image>
      <view class='details-hits'>
        <view>
          <text>截止时间:</text>
          <text class='time-condition'>{{item.conditionsName}}</text>
          <text class='conditions'>{{item.conditionsHits}}</text>
        </view>
        <view>
          <image class='hits' src='/images/icon/tuoyuan_w.png'></image>
          <text class='examine'>{{item.click_volume}}</text>
        </view>
      </view>
    </view>
  </block>
</view>