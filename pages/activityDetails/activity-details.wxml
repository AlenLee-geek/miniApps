<view>
  <block wx:for="{{actdata}}" wx:for-item="item" wx:for-index="idx" wx:key="{{index}}">
    <view class='activity-particulars' id="{{item.id}}" catchtap='clickVote'>
      <image class='activity-particularsImg' src='{{item.conditions}}'></image>
      <!-- <image class='activity-particularsImg' src='{{item.actUrl}}'></image> -->
      <view class='details-hits'>
        <view>
          <text>截止时间:</text>
          <text class='time-condition'>{{item.endTime}}</text>
          <!-- <text class='conditions'>{{item.conditionsHits}}</text> -->
          <text class='conditions'>进行中</text>
        </view>
        <view>
          <image class='hits' src='/images/icon/tuoyuan_w.png'></image>
          <text class='examine'>{{item.actStatus}}</text>
        </view>
      </view>
    </view>
  </block>
</view>