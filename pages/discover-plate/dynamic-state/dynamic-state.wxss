dynamic{
  width: 100%;
  height: 10rem;
  background: #EBEBEB;
}

.dynamic_cover{
  width: 90%;
  height: 10rem;
  margin:20px 5% 0 5%;
  border: 1px dashed #EBEBEB;
  border-radius: .5rem;
}

.title{
  width: 90%;
  height: 2rem;
  line-height: 2rem;
  margin: 0.5rem 5% 0;
  text-align:center;
  border: 1px solid #EBEBEB;
  border-radius: 0.3rem;
}

.add{
  width: 1.5rem;
  height: 1.5rem;
  border-radius: 50%;
  border: 1px solid #EBEBEB;
  text-align: center;
  line-height: 1.3rem;
  color: #ccc;
  font-size: 1.4rem;
  margin: 0.5rem auto;
}
.img_txt{
  width: 5.5rem;
  height: 1.8rem;
  border: 1px solid #EBEBEB;
  border-radius: 1rem;
  margin: 0.5rem auto;
  padding: 0.4rem 0.5rem;
}
.addimg{
  float: left;
  width: 2.3rem;
  height: 1.6rem;
}
.addtxt{
  float: right;
  width: 2.3rem;
  height: 1.6rem;
}

.box{
  width: 90%;
  margin:0.5rem 5% 0 5%;
  border: 1px solid #ccc;
  border-radius: .5rem;
  overflow: hidden;
}

.imgbox{
  height: 10rem;
}
.childimg{
  width: 55%;
  height: 90%;
  margin: 2% 0 0 1%;
  float: left;
}

.childimgtext{
  width: 40%;
  height: 90%;
  margin: 2% 1% 0 0;
  float: right;
  overflow: hidden;
}

.childtext{
  width: 95%;
  height: 90%;
  margin: 2%;
  overflow: hidden;
}

