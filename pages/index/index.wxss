/**index.wxss**/

page {
  width: 100%;
}

.container {
  display: flex;
  flex-direction: column;
}

.headSeek {
  background: #fc5e2d;
  color: white;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  width: 100%;
}

.usingTheVolume {
  width: 46rpx;
  height: 36rpx;
  float: left;
}

.site_location {
  width: 16%; 
  height: 60rpx;
  display: flex;
  align-items: center;
}

 .site_location_text{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
} 

.location {
  width: 8.5px;
  height: 8.5px;
  padding-left: 5.5px;
  text-indent: 50px;
}

.search_box {
  width: 242px;
  height: 26px;
  background-color: white;
  color: #808080;
  font-weight: PingFang-SC-Regular;
  font-size: 30rpx;
  border-radius: 3px;
}

.lbtupian {
  width: 100%;
  height: 100%;
}

.warp_classify {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 120px;
  align-items: center;
  font-size: 14px;
}

.classify {
  width: 20%;
  align-items: center;
  text-align: center;
}

.classify_img {
  width: 44px;
  height: 44px;
}

.classify_text {
  padding-top: 8px;
}

.scroll_box {
  white-space: nowrap;
  overflow: hidden;
  width: 96%;
  padding-left: 14px;
  padding-top: 25rpx;
}

.scroll {
  overflow: hidden;
  height: 320rpx;
  width: auto;
  font-size: 12px;
}

.scroll-view-item {
  width: 40%;
  display: inline-block;
  padding-right: 10px;
}

.scroll-view-item-img {
  width: 100%;
  height: 100px;
  /* height: 118px; */
  border-radius: 3%;
}

.cate_site {
  padding-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
}


