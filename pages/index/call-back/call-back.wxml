<view class='verification'>
  <view class='verification-inside'>
    <view class='inputBox'>
      <text>消费金额(元):</text>
      <input class="accountInp" type="text" name="金额" placeholder="输入消费金额" maxlength="12" />
    </view>

    <view>
      <view class="discountInfo">
        <text class="discountTicket">50元平台卷(满500元可用)</text>
        <text class="discountMoney discountMoney">-50</text>
      </view>
    </view>

    <view class="paymentBox">
      <text>实际需付款（元）</text>
      <text class="actualAmount">3</text>
    </view>
    <span class="okBtn">确认核销</span>
  </view>
</view>